<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= paginate @users %>
      <%= 
      if @user.picture?
        image_tag @user.picture, width: 100, alt: 'user avatar'
      else
        image_tag 'default_avatar.jpg', width: 100, alt: 'default user avatar'
      end
      %>
      <h1><%= @user.username %></h1>
      <span><%= link_to "view my profile", @user %></span>
      <span><b>Glips:</b> <%= @user.glips.count %></span>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to user.picture, user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
    <% end %>
  </div>
</div>