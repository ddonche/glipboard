<div class="user-left-column">

  <div class="side-box">
    
      <div class="content-center">
        <%= 
        if @user.picture?
          image_tag @user.picture, width: 160, alt: 'user avatar'
        else
          image_tag 'default_avatar.jpg', width: 160, alt: 'default user avatar'
        end
        %>
        
        <div class="post-title">
          <%= @user.username %>
        </div>
        
        <div class="post-content">
          <% if current_user.id == @user.id %>
            <%= link_to "Edit Profile", edit_user_registration_path(@user) %>
          <% else %>
            <%= link_to 'message', new_message_path(receiver_id: @user.id) %>
          <% end %>
        </div>
        
        <section class="stats">
          <%= render 'shared/stats' %><br /><br />
          <%= render 'follow_form' if user_signed_in? %>
        </section>
        
      </div>
  </div>
  
<br />
  <div class="side-box">
    <div class="side-content">
      
    <% unless @user.bio.nil? %>
      <%= @user.bio %><br /><br />
    <% end %>
    
    <% unless @user.website.nil? %>
      <div class="table-row">
        <div class="tiny-table-cell">
          <i class="fa fa-globe" aria-hidden="true"></i>
        </div>
        <div class="tiny-table-cell">
          <%= link_to @user.website, @user.website %>
        </div>
      </div>
    <% end %>
    <% unless @user.city.nil? %>
      <div class="table-row">
        <div class="tiny-table-cell">
          <i class="fa fa-map-marker" aria-hidden="true"></i>
        </div>
        <div class="tiny-table-cell">
          <%= @user.city %>
        </div>
      </div>
    <% end %>
    
    <% unless @user.country.nil? %>
        <div class="tiny-table-cell">
          <i class="fa fa-flag" aria-hidden="true"></i>
        </div>
        <div class="tiny-table-cell">
          <%= @user.country %>
        </div>
    <% end %>
    </div>
  </div>
</div>
    
    
<div class="user-right-column">

  <div id ="index-nav-container">
        <div class = "table-row">
          <div class="table-cell">Top Content</div>
          <div class="table-cell"><div class="index-top-buttons"><div class="all-button"><%= link_to "latest", root_path %></div></div></div>
          <div class="table-cell"><div class="index-top-buttons"><div class="glip-button"><%= link_to "glips", glips_path %></div></div></div>
          <div class="table-cell"><div class="index-top-buttons"><div class="article-button"><%= link_to "articles", articles_path %></div></div></div>
          <div class="table-cell"><div class="index-top-buttons"><div class="group-button"><%= link_to "groups", groups_path %></div></div></div>
          <div class="table-cell"><div class="index-top-buttons"><div class="user-button"><%= link_to "users", users_path %></div></div></div>
        </div>
  </div>
  
  <div class= "logs">
    <div class= "table">
      <% @everything.each do |everything| %>
        
        <% if everything.model_name.human == "Log" %>
          <div class="table-row">
            <div class="table-cell">
              <div class="log-button">log</div>
            </div>
            <div class="table-cell">
              <%= everything.content.truncate(80) %>
            </div>
            <div class="table-cell">
              <%= time_ago_in_words(everything.created_at) %> ago
            </div>
          </div>
        
        <% elsif everything.model_name.human == "Glip" %>
          <div class="table-row">
            <div class="table-cell">
              <div class="glip-button">glip</div>
            </div>
            <div class="table-cell">
              <% if everything.status == "incomplete" %>
                <i class="fa fa-star-half-o"></i>&nbsp;<%= link_to everything.title.truncate(80), everything %>
              <% else %>
                <i class="fa fa-star"></i>&nbsp;<%= link_to everything.title.truncate(80), everything %>
              <% end %>
            </div>
            <div class="table-cell">
              <% everything.tag_list.map.each do |tag| %>
                <div class="tags">
                  <%= link_to tag, tag_path(tag) %>
                </div>
              <% end %>
            </div>
            
          </div>
        
        <% else %>
          <div class="table-row">
            <div class="table-cell">
              <div class="article-button">article</div>
            </div>
            <div class="table-cell">
              <% if everything.feature == "featured" %>
                <i class="fa fa-trophy"></i><% end %>&nbsp;<%= link_to everything.title.truncate(80), everything %>
            </div>
            <div class="table-cell">
              <% everything.tag_list.map.each do |tag| %>
                <div class="tags">
                  <%= link_to tag, tag_path(tag) %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
        
      <% end %>

    </div>
  </div>
  <br />
  <div class ="pagination-container">
    <%= paginate @everything %>
  </div>
  
</div>