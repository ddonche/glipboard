<div class= "logs">
    <div class= "table">
      <% @articles.each do |article| %>
        
          <div class="table-row">
            <div class="table-cell">
              <div class="article-button">article</div>
            </div>
            <div class="table-cell">
                <%= link_to article.title.truncate(80), article %>
            </div>
            <div class="table-cell">
              <% article.tag_list.map.each do |tag| %>
                <div class="tags">
                  <%= link_to tag, tag_path(tag) %>
                </div>
              <% end %>
            </div>
            
          </div>
        
      <% end %>

    </div>
  </div>
  <br />
  <div class ="pagination-container">
    <%= paginate @articles %>
  </div>