<div class= "logs">
    <div class= "table">
      <% @glips.each do |glip| %>
        
          <div class="table-row">
            <div class="table-cell">
              <div class="glip-button">glip</div>
            </div>
            <div class="table-cell">
              <% if glip.active == "abandoned" %>
                <i class="fas fa-skull" title="abandoned"></i>
              <% end %>
              <% if glip.status == "incomplete" %>
                <i class="fa fa-star-half-alt"></i>&nbsp;<%= link_to glip.title.truncate(80), glip %>
              <% else %>
                <i class="fa fa-star"></i>&nbsp;<%= link_to glip.title.truncate(80), glip %>
              <% end %>
            </div>
            <div class="table-cell">
              <% glip.tag_list.map.each do |tag| %>
                <div class="tags">
                  <%= link_to tag, tag_path(tag) %>
                </div>
              <% end %>
            </div>
            
          </div>
        
        
        
      <% end %>

    </div>
  </div>
  <br />
  <div class ="pagination-container">
    <%= paginate @glips %>
  </div>