<div class="content-show">
  <div id="posts-form">
    <a name="comment"></a><%= link_to "New Comment", new_article_comment_path(@article), :remote => true %>
    &nbsp;&nbsp;<h4><em><i class="fa fa-comments"></i>&nbsp;&nbsp;<%= @article.comments.count %> Comments</em></h4>
  </div>
    <%= render "comments/comments" %>

  <% if @article.comments.count != 0 %>
  
  <div id="posts-form">
    <%= link_to new_article_comment_path(@article), :remote => true do %>
      <a href="#comment">New Comment</a>
    <% end %>
  </div>
  <% end %>
</div>