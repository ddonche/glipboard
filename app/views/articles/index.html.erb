<div id ="index-container">
  <div class= "logs">
    <div class= "table">
      <%= paginate @articles %>
        <% @articles.each do |article| %>
              
          <div class="table-row">
            <div class="table-cell">
              <%= link_to like_article_path(article), method: :put do %><i class="fa fa-chevron-up"></i><% end %>&nbsp;<%= article.get_upvotes.size %>&nbsp;&nbsp;
              <%= link_to dislike_article_path(article), method: :put do %><i class="fa fa-chevron-down"></i><% end %>&nbsp;<%= article.get_downvotes.size %>
            </div>
          
            <div class="table-cell">
              <i class="fa fa-comments"></i>&nbsp;&nbsp;<%= article.comments.count %>
            </div>
          
            <div class="table-cell">
              <% if article.feature == "featured" %>
                <i class="fa fa-trophy"></i>&nbsp;
              <% end %>
              <%= link_to article.title.truncate(40), article %>
            </div>
          
            <div class="table-cell">
              <%= time_ago_in_words(article.created_at) %> ago
            </div>
            
            <div class="table-cell">
              <%= link_to article.user.username, user_path(article.user) %>
                &nbsp;<%= number_to_human(article.user.reputation) %>
            </div>
            
            <div class="table-cell">
              <% article.tag_list.map.each do |tag| %>
                <div class="tags">
                  <%= link_to tag, tag_path(tag) %>
                </div>
              <% end %>
            </div>
          </div>
        
      <% end %>
      
    </div>
  </div>
</div>
