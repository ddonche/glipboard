<div class="log-box">
  <div class="center">
    <div class="fake-submit">
      <i class="fa fa-plus"></i>&nbsp;<%= link_to 'Create a New Article', new_article_path %>
    </div>
  </div>
</div>
<br />

<% if user_signed_in? %>
  <% if current_user.glips.any? && @article.status == "published" %>
    <div class="side-box">
      <div class="side-content">
        <%= render 'mentorships/form' %>
      </div>
    </div>
    <br />
  <% else %>
    <div class="side-box">
      <div class="side-content">
        <div class="small"><em>You currently have no glips. Make a <%= link_to 'new glip', new_glip_path %> if you'd like to mark this article as helpful.</em></div>
      </div>
    </div>
    <br />
  <% end %>
<% else %>
  <div class="side-box">
    <div class="side-content">
      <div class="small"><em>You are not currently signed in. <%= link_to 'Login', new_user_session_path %> if you'd like to mark this article as helpful.</em></div>
    </div>
  </div>
  <br />
<% end %>

<div class="side-box">
  <div class="side-content">
    <div class="title-box" style="font-size: 16px; text-align: center;"><%= @article.glips.size %> Glips helped by this Article</div>
    
    <% if @article.glips.size == 0 %>
      &nbsp;
    <% else %>
      <% @glips.each do |glip| %>
        <li><%= link_to glip.title, glip %></li>
      <% end %>
    <% end %>
  </div>
</div>