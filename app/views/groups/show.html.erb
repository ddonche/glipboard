<%= render 'header' %>
<div id="content-wrap">
  <div class="left-column">
    <%= render 'title' %>
      
      <em><i class="fa fa-heartbeat" aria-hidden="true"></i>&nbsp;&nbsp;<%= @group.posts.count %> Posts</em><br />
      <%= render 'posts/form' %>

      <div class="content">
        <% @posts.each do |post| %>
          <div class="table-row">
            <div class="table-cell">
              <%= link_to like_group_post_path(@group, post), method: :put do %><i class="fa fa-chevron-up"></i><% end %>&nbsp;<%= post.get_upvotes.size %>&nbsp;&nbsp;
              <%= link_to dislike_group_post_path(@group, post), method: :put do %><i class="fa fa-chevron-down"></i><% end %>&nbsp;<%= post.get_downvotes.size %>
            </div>
          
            <div class="table-cell">
              <i class="fa fa-comments"></i>&nbsp;&nbsp;<%= post.responses.count %>
            </div>
          
            <div class="table-cell">
              <%= link_to post.title.truncate(40), group_post_path(@group, post) %>
            </div>
          
            <div class="table-cell">
              <%= time_ago_in_words(post.created_at) %> ago
            </div>
            
            <div class="table-cell">
              <%= link_to post.user.username, user_path(post.user) %>
                &nbsp;<%= number_to_human(post.user.reputation) %>
            </div>
          </div>
        <% end %>
      </div>
  </div>
    
  <div class="right-column">
    <div class="log-box">
      <%= render 'description' %>
  </div>

</div>