<%= render 'header' %>
<div id="content-wrap">
  <div class="left-column">
    <%= render 'title' %>
      
      <div class="category-box">
        <div class="table-row">
          <% @categories.each do |category| %>
            <div class="category-items">
              <div class="tiny-table-cell">
                <% if !category.icon.nil? %><%= image_tag category.icon, size: '25' %><% end %>
              </div>
              
              <div class="tiny-table-cell">
                <%= link_to category.title, root_path %>
              </div>
            </div>
          <% end %>
        
        <% if (user_signed_in? && (current_user.id == @group.user_id)) %>
          <%= link_to new_group_category_path(@group), :remote => true do %><div class="float-right"><i class="fa fa-plus-circle"></i></div><% end %>
        <% end %>
        
        </div>

      </div>
      
      <div id="categories-form">
        &nbsp;
      </div>
      
      <div id="posts-form">
        <%= link_to "New Post", new_group_post_path(@group), :remote => true %>
      </div><br />

      <div class="content">
        <% @posts.each do |post| %>
          <div class="table-row">
            <div class="table-cell">
              <%= link_to like_group_post_path(@group, post), method: :put do %><i class="fa fa-chevron-up"></i><% end %>&nbsp;<%= post.get_upvotes.size %>&nbsp;&nbsp;
              <%= link_to dislike_group_post_path(@group, post), method: :put do %><i class="fa fa-chevron-down"></i><% end %>&nbsp;<%= post.get_downvotes.size %>
            </div>
          
            <div class="table-cell">
              <i class="fa fa-comments"></i>&nbsp;&nbsp;<%= post.responses.count %> replies
            </div>
          
            <div class="table-cell">
              <%= link_to post.title.truncate(40), group_post_path(@group, post) %>
            </div>
          
            <div class="table-cell">
              <%= time_ago_in_words(post.created_at) %> ago 
            </div>
            
            <div class="table-cell">
              <%= link_to post.user.username, user_path(post.user) %>
                &nbsp;<b><%= number_to_human(post.user.reputation, :format => '%n%u', :precision => 2, :units => { :thousand => 'K' }) %></b>
            </div>
          </div>
        <% end %>
      </div>
  </div>
    
  <div class="right-column">
    <div class="log-box">
      <%= render 'description' %>
  </div>

</div>