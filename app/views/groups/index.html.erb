<div id ="index-nav-container">
  <div class = "table-row">
    <div class="table-cell">Groups</div>
  </div>
</div>

<div class ="pagination-container">
  <%= paginate @groups %>
</div>

<div id ="index-container">
  <div class= "logs">
    <div class= "table">
        <% @groups.each do |group| %>
              
          <div class="table-row">
          
            <div class="table-cell">
              <%= link_to group.title, group %>
            </div>
          
            <div class="table-cell">
              <%= group.description.truncate(70) %>
            </div>
            
            <div class="table-cell">
              <%= group.users.size %> members
            </div>
            
            <div class="table-cell">
              <% group.tag_list.map.each do |tag| %>
                <div class="tags">
                  <%= link_to tag, tag_path(tag) %>
                </div>
              <% end %>
            </div>
          </div>
        
      <% end %>
      
    </div>
  </div>
</div>

<div class ="pagination-container">
  <%= paginate @groups %>
</div>