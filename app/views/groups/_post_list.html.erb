<div class="content">
  <% @posts.each do |post| %>
    <div class="table-row">
      <div class="table-cell" style="width: 18%;">
        <i class="fa fa-chevron-up" title="upvotes"></i>&nbsp;<%= post.get_upvotes.size %>&nbsp;&nbsp;
        <i class="fa fa-chevron-down" title="downvotes"></i>&nbsp;<%= post.get_downvotes.size %>
      </div>
    
      <div class="table-cell">
        <i class="fa fa-comments" style="display:inline;" title="comments"></i>&nbsp;&nbsp;<%= post.responses.count %>
      </div>
    
      <div class="table-cell">
        <%= link_to post.title, group_post_path(@group, post) %>
      </div>
    
      <div class="table-cell">
        <%= time_ago_in_words(post.created_at) %> ago 
      </div>
      
      <div class="table-cell">
        <%= link_to post.user.username, user_path(post.user) %>
          &nbsp;<b><%= number_to_human(post.user.reputation, :format => '%n%u', :precision => 2, :units => { :thousand => 'K' }) %></b>
      </div>
    </div>
  <% end %>
</div>