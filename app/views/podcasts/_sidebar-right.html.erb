
  <div class="avatar-show">
    <%= 
      if @podcast.group_id?
        link_to group_path(@group) do
          image_tag @group.icon, width: 84, alt: 'group icon'
        end
      else
        if @podcast.user.picture?
          link_to user_path(@podcast.user) do
            image_tag @podcast.user.picture, width: 84, alt: 'user avatar'
          end
        else
          link_to user_path(@podcast.user) do
            image_tag 'default_avatar.jpg', width: 84, alt: 'default user avatar'
          end
        end
      end
    %>
      <% if user_signed_in? && current_user.id != @podcast.user_id %>
        <div id="small-follow"><%= render 'users/follow_form' %></div>
      <% end %>
  </div>
  
  <div class="details-show">
      created by
   <h4 style="display:inline;"><%= link_to @podcast.user.username, user_path(@podcast.user) %></h4>
   &nbsp;<%= time_ago_in_words(@podcast.created_at) %> ago for 
   <%= link_to @group.title, group_path(@group) %>
      <br />
      <% @podcast.tag_list.map.each do |tag| %>
        <div class="tags"><%= link_to tag, tag_path(tag) %></div>
      <% end %><br />

      <i class="fa fa-microphone" title="episodes"></i>&nbsp;&nbsp;<%= @podcast.episodes.count %>&nbsp;Episodes<br />
  </div>
<% if (user_signed_in? && (current_user.id == @podcast.user.id)) %>
    <div class="small-bold-red" style="display:inline-block;">
      <%= link_to new_podcast_episode_path(@podcast) do %><i class="fa fa-microphone"></i>&nbsp;New Episode<% end %>
    </div>
    <div class="small-bold-red" style="display: inline-block;">
      <%= link_to edit_podcast_path(@podcast) do %><i class="fa fa-pencil"></i>&nbsp;Edit Podcast<% end %>
    </div>
<% end %>
    <div class="small-bold-red" style="display:inline-block;">
      <%= link_to new_podcast_path do %><i class="fa fa-plus"></i>&nbsp;Create New Podcast<% end %>
    </div>
    
<% @episodes.each do |episode| %>
  <div class = "table">
    <div class = "table-row">
      <div class="tiny-table-cell">
        <%= link_to episode.title, podcast_episode_path(@podcast, episode) %>
      </div>
      <div class="tiny-table-cell">
        <%= episode.created_at.strftime("%b %d, %Y") %>
      </div>
    </div>
  </div>
<% end %>