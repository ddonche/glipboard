<div id="wrapper">
  
  <%= paginate @pager %>
    <% @pager.each do |pager| %>

      <% if pager.model_name.human == "Glip" %>
        <div class="index-boxes">
      <% elsif pager.model_name.human == "Group" %>
        <div class="group-boxes">
      <% else pager.model_name.human == "Article" %>
        <div class="index-article-boxes">
      <% end %>
      
      <% if (user_signed_in? && (current_user.id == pager.user_id)) %>
        <div class="content-alter">
            <% if pager.model_name.human == "Glip" %>
              <%= link_to edit_glip_path(pager) do %><i class="fa fa-pencil"></i><% end %> &nbsp;&nbsp;
              <%= link_to glip_path(pager), method: :delete, data: { confirm: "Are you sure?" } do %><i class="fa fa-times"></i><% end %>
            <% elsif pager.model_name.human == "Article" %>
              <%= link_to edit_article_path(pager) do %><i class="fa fa-pencil"></i><% end %> &nbsp;&nbsp;
              <%= link_to article_path(pager), method: :delete, data: { confirm: "Are you sure?" } do %><i class="fa fa-times"></i><% end %>
            <% else %>
              <%= link_to edit_group_path(pager) do %><i class="fa fa-pencil"></i><% end %>
            <% end %>
        </div>
      <% end %>
      
      <% if pager.model_name.human != "Group" %>
        <div class="index-title"><%= link_to pager.title, pager %></div>
        <div class="content"><%= pager.content.truncate(200) %></div>
        <div class="date-right">
          Posted <%= time_ago_in_words(pager.created_at) %> ago
        </div>
      <% else %>
        <div class="index-title"><%= link_to pager.title, pager %></div>
        <div class="content"><%= pager.description.truncate(200) %></div>
      <% end %>
        
      <div class="date">
          <i class="fa fa-tags"></i>&nbsp;&nbsp;<%= raw(pager.tag_list.map { |t| link_to t, tag_path(t) }.join(' , ')) %>&nbsp;&nbsp;&nbsp;&nbsp;
        <% if pager.model_name.human != "Group" %>  
          <i class="fa fa-comments"></i>&nbsp;&nbsp;<%= pager.comments.count %>&nbsp;<%= link_to "comments", pager %>&nbsp;&nbsp;&nbsp;
        <% end %>
        
        <% if pager.model_name.human == "Glip" %>
          <i class="fa fa-book"></i>&nbsp;&nbsp;<%= pager.logs.count %>&nbsp;<%= link_to "logs", glip_logs_path(pager) %>&nbsp;&nbsp;&nbsp;
          <%= link_to like_glip_path(pager), method: :put do %><i class="fa fa-chevron-up"></i><% end %>&nbsp;<%= pager.get_upvotes.size %>&nbsp;&nbsp;
          <%= link_to dislike_glip_path(pager), method: :put do %><i class="fa fa-chevron-down"></i><% end %>&nbsp;<%= pager.get_downvotes.size %>
        <% elsif pager.model_name.human == "Article" %>
          <%= link_to like_article_path(pager), method: :put do %><i class="fa fa-chevron-up"></i><% end %>&nbsp;<%= pager.get_upvotes.size %>&nbsp;&nbsp;
          <%= link_to dislike_article_path(pager), method: :put do %><i class="fa fa-chevron-down"></i><% end %>&nbsp;<%= pager.get_downvotes.size %>
        <% else %>
          <%= pager.users.size %> members
        <% end %>
      </div>
      
  <% end %>

</div>