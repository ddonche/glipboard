<div class="log-form">
<%= form_for [@group, @post, @response] do |f| %>
  <% if @response.errors.any? %>
      <div class="error_messages">
        <h3>Please correct the following errors.</h3>
        <ul>
        <% @response.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    
      <div class="small"><em>
        You can enter an optional subtitle. 
        Some groups use this as a place to track a reply's status (complete, fixed, pending, etc.)
      </em></div>
      <%= f.text_field :subtitle %><br />
      <%= f.text_area :content, rows: 3 %><br />

      <%= f.submit 'Reply' %>
<% end %>
</div>