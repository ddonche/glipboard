<%= form_for [@group, @post, @response] do |f| %>
  <% if @response.errors.any? %>
      <div class="error_messages">
        <h3>Please correct the following errors.</h3>
        <ul>
        <% @response.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="field">
      <%= f.text_area :content, rows: 3 %>
    </div>
    
    <div><%= f.hidden_field :post_id, :value => @post %></div>
    <div><%= f.hidden_field :group_id, :value => @group %></div>
    
    <div class="actions">
      <%= f.submit 'Reply' %>
    </div>
<% end %>