<% @responses.each do |response| %>
<div class="comments">
  
  <div class="comments-left-column">
    <div class="comments-center">
      <%= link_to like_group_post_response_path(@group, @post, response), method: :put, remote: true do %><i class="fa fa-chevron-up"></i><% end %><br />
      <div id="upvote-<%= response.id %>" style="display: inline;"><%= response.get_upvotes.size %></div><br /><br />
      <div id="downvote-<%= response.id %>" style="display: inline;"><%= response.get_downvotes.size %></div><br />
      <%= link_to dislike_group_post_response_path(@group, @post, response), method: :put, remote: true do %><i class="fa fa-chevron-down"></i><% end %>
    </div>
  </div>
  
  <div class="comments-center-column">
    <div class="comments-center">
      <%= 
        if response.user.picture?
          link_to user_path(response.user) do
            image_tag response.user.picture, width: 64, alt: 'user avatar'
          end
        else
          link_to user_path(response.user) do
            image_tag 'default_avatar.jpg', width: 64, alt: 'default user avatar'
          end
        end
      %><h3 style="margin-top: 0;"><%= link_to response.user.username, user_path(response.user) %></h3> 
      <%= response.user.reputation %>
    </div>
  </div>
  <div class="comments-right-column">
    <div class="comment-content" style="display: inline-block;">
      <div class="comments-small">
      <em>Posted <%= time_ago_in_words(response.created_at) %> ago</em>
    
      <% if (user_signed_in? && (current_user.id == response.user_id)) %>
        <div class="responses-alter">
          <%= link_to edit_group_post_response_path(@group, @post, response) do %><i class="fa fa-pencil"></i><% end %> &nbsp;&nbsp;
          <%= link_to group_post_response_path(@group, @post, response), method: :delete, data: { confirm: "Are you sure?" } do %><i class="fa fa-trash"></i><% end %>
        </div>
      <% end %>
    
      </div>
    
      <%= markdown response.content %>
    </div>
  </div>
  
</div>
<% end %>