  <div class = "table-row">
    <div class="table-cell"><div class="post-title">Latest Glips</div></div>
  </div>
</div>

<div id ="index-container">
  <div class= "logs">
    <div class= "table">
      <%= paginate @glips %>
        <% @glips.each do |glip| %>
              
          <div class="table-row">
            <div class="table-cell">
              <%= link_to like_glip_path(glip), method: :put do %><i class="fa fa-chevron-up"></i><% end %>&nbsp;<%= glip.get_upvotes.size %>&nbsp;&nbsp;
              <%= link_to dislike_glip_path(glip), method: :put do %><i class="fa fa-chevron-down"></i><% end %>&nbsp;<%= glip.get_downvotes.size %>
            </div>
          
            <div class="table-cell">
              <i class="fa fa-comments"></i>&nbsp;&nbsp;<%= glip.comments.count %>
            </div>
          
            <div class="table-cell">
              <% if glip.status == "incomplete" %>
                <i class="fa fa-star-half-o"></i>
              <% else %>
                <i class="fa fa-star"></i>
              <% end %>
              <%= link_to glip.title.truncate(40), glip %>
            </div>
          
            <div class="table-cell">
              <%= time_ago_in_words(glip.created_at) %>
            </div>
            
            <div class="table-cell">
              <%= link_to glip.user.username, user_path(glip.user) %>
                &nbsp;<%= glip.user.reputation %>
            </div>
            
            <div class="table-cell">
              <% glip.tag_list.map.each do |tag| %>
                <div class="tags">
                  <%= link_to tag, tag_path(tag) %>
                </div>
              <% end %>
            </div>
          </div>
        
      <% end %>
      
    </div>
  </div>
</div>
