<%= content_for(:meta_og) do %>
    <meta property="og:title" content="<%= @glip.title %>" />
    <meta property="og:type" content="article" />
    <meta property="og:published_time" content="<%= @glip.created_at.strftime('%Y-%m-%d %H:%M') %>" />
    <meta property="og:description" content="<%= @glip.content.html_safe.truncate(250) %>" />
    <% if @glip.image %>
      <meta property="og:image" content="<%= @glip.image.url %>" />
    <% end %>
<% end %>

<% if (@glip.privacy == "hidden") && (current_user != @glip.user) %>
    <%= render 'shared/private' %>
<% else %>

<div id="content-wrap">
    <div class="left-column">
      <%= render 'header' %>
      <%= render 'content' %>      
      <%= render 'comments' %>
    </div>
    
  <div class="right-column">
    <%= render 'sidebar' %>
  </div>

</div>
<% end %>