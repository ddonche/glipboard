<div class="glips">
    <h3><%= @glip.title %></h3>
      <div class="date">Posted <%= time_ago_in_words(@glip.created_at) %> ago by <%= link_to @glip.user.username, user_path(@glip.user) %></div>
      <div class="date"><i class="fa fa-tags"></i>&nbsp;&nbsp;<%= raw(@glip.tag_list.map { |t| link_to t, tag_path(t) }.join(' , ')) %></div>  
      <div class="content">
        <%= @glip.content.html_safe %>
      </div>
      <div class="date">
        <i class="fa fa-pencil"></i>&nbsp;&nbsp;<%= link_to "Edit", edit_glip_path(@glip) %> |
        <i class="fa fa-times"></i>&nbsp;&nbsp;<%= link_to "Delete", glip_path(@glip), method: :delete, data: { confirm: "Are you sure?" } %> |
        <%= link_to "List", glips_path %>
      </div>
</div>

<h3>Comments</h3>
<%= render "comments/form" %><br/>
<%= render "comments/comments" %>