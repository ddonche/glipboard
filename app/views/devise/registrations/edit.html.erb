<div id="content-wrap">
  
    <div class="left-column">
      
      <div class="title-box">
        Editing <%= resource_name.to_s.humanize %> Profile
      </div>

      <div class="log-form">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }) do |f| %>
          <%= f.error_notification %>
        
          <fieldset>
            <legend>Basic Info</legend>
            <%= f.label 'Username' %><br />
            <%= f.text_field :username, placeholder: 'Username cannot be blank' %><br />
            <%= f.text_field :email, placeholder: 'Email cannot be blank' %>
        
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
            <% end %>
            
            <%= f.label :bio %><br />
            <%= f.text_area :bio, placeholder: 'Bio', rows: 2 %><br />
            
            <%= f.label :website %><br />
            <%= f.text_field :website %><br />
            <%= f.label :city %><br />
            <%= f.text_field :city %><br />
            <%= f.label :country %><br />
            <%= f.text_field :country %><br />
          </fieldset>
            
          <fieldset>
            <legend>Avatar</legend>
            <%= f.label :picture do %>
              <%= f.file_field :picture %>
              <%= f.hidden_field :picture_cache %>
            <% end %>
          </fieldset>
        
          <fieldset>
            <legend>Password</legend>
            <%= f.password_field :password, placeholder: 'password', autocomplete: "off", required: false %>
            <div class="small"><em>leave blank if you don't want to change your password</em></div><br />
            <%= f.password_field :password_confirmation, placeholder: 'password confirmation', required: false %><br />
          </fieldset>
          
            <%= f.button :submit, "Update" %>
        <% end %>
      </div>
      
      <div class="log-form">
      <h3>Cancel my account</h3>
      <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
      <%= link_to "Back", :back %>
      </div>
  </div>
</div>