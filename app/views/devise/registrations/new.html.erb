<div id="content-wrap">
  <div class="left-column">
    
    <div class="title-box">
      Sign Up
    </div>

    <div class="log-form">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        
        <%= devise_error_messages! %>
      
        <fieldset>
          <legend>Basic Info</legend>
          <%= f.text_field :username, placeholder: 'Username cannot be blank' %><br />
          <%= f.text_field :email, autofocus: true, placeholder: 'Email cannot be blank' %>
        </fieldset>
        
        <fieldset>
          <legend>Password</legend>
          <%= f.password_field :password, placeholder: 'password', autocomplete: "off" %><br /><br />
          <%= f.password_field :password_confirmation, placeholder: 'retype your password' %>
        </fieldset>
      
        <%= f.button :submit, "Register" %>
        
      <% end %>
      
    </div>
    
  </div>
  
  <div class="right-column">
    <div class="side-box"> 
      <div class="side-content">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
  
</div>