<% if @commentable.model_name.human == "Post" %>
  <%= form_for [@group, @commentable, @comment] do |f| %>
    <% if @comment.errors.any? %>
        <div class="error_messages">
          <h3>Please correct the following errors.</h3>
          <ul>
          <% @comment.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      
      <div class="field">
        <%= f.text_area :content, rows: 3 %>
      </div>
      
      <%= f.hidden_field :group_id, :value => @group.id %>

      <div class="actions">
        <%= f.submit %>
      </div>
  <% end %>
<% else %>
  <%= form_for [@commentable, @comment] do |f| %>
    <% if @comment.errors.any? %>
        <div class="error_messages">
          <h3>Please correct the following errors.</h3>
          <ul>
          <% @comment.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      
      <div class="field">
        <%= f.text_area :content, rows: 3 %>
      </div>
      
      <div class="actions">
        <%= f.submit %>
      </div>
  <% end %>
<% end %>

  