<div id="glips-wrapper">
    <h3>Comments</h3>
    <p><%= link_to "New Comment", [:new, @commentable, :comment] %></p>
    <% @comments.each do |comment| %>
      <div class="glips">
        <div class="post-title"><%= comment.content %></div>
        <div class="date">Posted <%= time_ago_in_words(comment.created_at) %> ago</div>
      </div>
    <% end %>
</div>
