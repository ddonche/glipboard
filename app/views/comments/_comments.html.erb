<div id="glips-wrapper">
    <% @comments.each do |comment| %>
      <div class="glips">
        <div class="post-title"><%= comment.content %></div>
        <div class="date">Posted <%= time_ago_in_words(comment.created_at) %> ago by <%= link_to comment.user.username, user_path(comment.user) %></div>
      </div>
    <% end %>
</div>