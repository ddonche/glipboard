<div class="log-form">
  <%= simple_form_for @blog do |f| %>
  
    <% if @blog.errors.any? %>
      <div class="alert">
        <h2><%= pluralize(@blog.errors.count, "error") %> prohibited this blog from being saved:</h2>
     
        <ul>
        <% @blog.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    
    <%= f.text_field :title, placeholder: 'Title' %><br />
    <%= f.text_field :guest_id, placeholder: 'Guest Author ID' %><br />
    <%= f.cktext_area :body, class: 'ckeditor', placeholder: 'Content', rows: 15 %>
    
    <%= f.text_field :tag_list, placeholder: 'tags', value: @blog.tag_list.join(", ") %>
    <div class="small"><em>Add up to 5 tags (separated by commas). Example: fitness, weight loss, marathon</em></div><br />
    
    <%= f.radio_button :status, 'published' %> 
    <%= label :status_published, 'Published' %>
    <%= f.radio_button :status, 'draft' %>
    <%= label :status_draft, 'Draft' %>
    <div class="small"><em>You can toggle blog status directly from the blog as well.</em></div><br />
    
          <fieldset>
            <legend>Image</legend>
              <br />
              <label class="upload-button">Upload Image<%= f.file_field :image, style: 'display:none;' %>
              </label>
              <div class="small"><br/><em>Image should be 620 pixels in width x 300 pixels in height. Must be less than 5Mb.</em></div>
          </fieldset>
    
    <%= f.submit %>
  <% end %>
</div>

