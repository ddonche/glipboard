<%= simple_form_for @blog do |f| %>
  <p><%= f.label :title, 'Title:' %></p>
  <p><%= f.text_field :title %></p>
  <p><%= f.text_area :body, rows: 3 %></p>
  <p><%= f.label :tag_list, 'Tags (separated by commas)' %> <em>Example: fitness, weight loss, marathon</em></p>
  <p><%= f.text_area :tag_list, value: @blog.tag_list.join(", "), rows: 1 %></p>
  <p><%= f.submit %></p>
<% end %>