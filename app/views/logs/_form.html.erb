<%= form_for [@glip, @log] do |f| %>
  <% if @log.errors.any? %>
    <div class="error_messages">
      <h3>Please correct the following errors.</h3>
      <ul>
      <% @log.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :content, rows: 3 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
