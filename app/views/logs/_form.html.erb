<div class="log-form">
  <%= form_for [@glip, @log] do |f| %>
    <% if @log.errors.any? %>
      <div class="error_messages">
        <h3>Please correct the following errors.</h3>
        <ul>
        <% @log.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="small"><em>200 characters limit</em></div>
    <%= text_field_tag :content, "", :maxlength => 200 %>
    <div class="actions">
      <%= f.submit "Submit Quicklog" %>
    </div>
  <% end %>
</div>
