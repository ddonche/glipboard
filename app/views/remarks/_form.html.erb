<%= form_for [@group, @post, @response, @remark] do |f| %>
  <% if @remark.errors.any? %>
      <div class="error_messages">
        <h3>Please correct the following errors.</h3>
        <ul>
        <% @remark.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="field">
      <%= f.text_area :content %>
    </div>
    
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>