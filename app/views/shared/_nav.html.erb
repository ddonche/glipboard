<div class="main-header">
      
  <div class="logo">
    <%= link_to root_path do %>
      <%= image_tag 'logo.png', width: 180, alt: 'Glipboard logo'%>
    <% end %>
  </div>
      
  <div class="buttons-no-border"><%= link_to 'About' %></div>
  <div class="buttons-no-border"><%= link_to 'Articles' %></div>
  <div class="buttons-no-border"><%= link_to "Podcast" %></div>
  <div class="buttons-no-border"><%= link_to 'Tags' %></div>
  <div class="buttons-no-border"><%= link_to 'Users', users_path %></div>

  <div class="buttons"><%= link_to 'New Glip', new_glip_path %></div>
  <div class="buttons"><%= link_to 'New Article', new_article_path %></div>

  <% if current_user %>
    <div class="buttons-black"><%= link_to 'Logout', destroy_user_session_path, method: 'delete' %></div>
  <% else %>
    <div class="buttons-black"><%= link_to 'Login', new_user_session_path %></div>
    <div class="buttons-black"><%= link_to 'Register', new_user_registration_path %></div>
  <% end %>
        
</div>