<div class="stats-center">
  <% @user ||= current_user %>
  
  <div class="stat-box">
    <a href="<%= following_user_path(@user) %>">
      <b><%= @user.following.count %></b><br />
      following
    </a>
  </div>
  
  <div class="stat-box">
    <a href="<%= followers_user_path(@user) %>">
      <b><div id="followers" style="display: inline;"><%= @user.followers.count %></div></b><br/>
      followers
    </a>
  </div>
  
  <div class="stat-box">
    <a href="#">
      <b><%= @user.reputation %></b><br/>
      reputation
    </a>
  </div>
  
  <div class="stat-box">
    <a href="#">
      <b><%= @user.glips.where({ status: "complete" }).count %></b><br/>
      glips
    </a>
  </div>
  
</div>